<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wykresy.MainPage"
            Title="Wykresy">
    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="Zmień dane" Clicked="ToolbarItem_Clicked"/>
    </TabbedPage.ToolbarItems>

    <ContentPage Title="Słupkowy" Appearing="ChartAppearing">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label x:Name="labelWykres" HorizontalOptions="Center" FontSize="15"/>
            <Grid x:Name="gridWykres" Grid.Row="1"/>
        </Grid>
    </ContentPage>
    <ContentPage Title="Kołowy"></ContentPage>
</TabbedPage>
